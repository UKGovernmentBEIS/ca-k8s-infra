{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "ray": {
      "type": "object",
      "properties": {
        "clusterName": {
          "type": "string"
        }{% if cookiecutter.network_policies %},
        "workers": {
          "type": "object",
          "properties": {
            "allowTrafficTo": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": ["allowTrafficTo"],
          "additionalProperties": false
        }{% endif %}
      },
      "required": ["clusterName"],
      "additionalProperties": false
    }{% if cookiecutter.honeypot %},
    "honeypotWebhookUrl": {
      "type": "string"
    }{% endif %},
    "environment": {
      "type": "string"
    }{% if cookiecutter.file_integrity %},
    "tetragon": {
      "type": "object",
      "properties": {
        "resources": {
          "type": "object",
          "properties": {
            "limits": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string",
                  "description": "CPU resource limit"
                },
                "memory": {
                  "type": "string",
                  "description": "Memory resource limit"
                }
              }
            },
            "requests": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string",
                  "description": "CPU resource request"
                },
                "memory": {
                  "type": "string",
                  "description": "Memory resource request"
                }
              }
            }
          }
        },
        "fileMonitoring": {
          "type": "object",
          "properties": {
            "readProtectedPaths": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "List of file paths to monitor for unauthorized reads"
            },
            "writeProtectedPaths": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "List of file paths to monitor for unauthorized modifications"
            },
            "sigkillProtectedRead": {
              "type": "boolean",
              "description": "Whether to kill processes when protected files are read from (if false, monitor only)"
            },
            "sigkillProtectedWrite": {
              "type": "boolean",
              "description": "Whether to kill processes when protected files are modified (if false, monitor only)"
            }
          },
          "required": [
            "readProtectedPaths",
            "writeProtectedPaths"
          ]
        },
        "egress": {
          "type": "object",
          "properties": {
            "allowedAddresses": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "List of IP addresses (or CIDR ranges) which shall not be monitored"
            }
          },
          "required": [
            "allowedAddresses"
          ]
        },
        "filelinks": {
          "type": "object",
          "properties": {
            "protectedPaths": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "List of paths that shall be monitored/prevented from being {sym,hard}linked to"
            },
            "prevent": {
              "type": "boolean",
              "description": "Whether to abort the syscall when protected paths are attempted to be linked to (if false, monitor only)"
            }
          },
          "required": [
            "protectedPaths"
          ]
        },
        "preventSsh": {
          "type": "boolean",
          "description": "Whether to prevent SSH/SCP binaries from being executed (otherwise this is only monitored)."
        },
        "preventSshd": {
          "type": "boolean",
          "description": "Whether to prevent an SSH server being run (otherwise this is only monitored)."
        }
      },
      "required": [
        "fileMonitoring"
      ]
    }{% endif %}
  },
  "required": [
    "ray",
    "environment"{% if cookiecutter.honeypot %},
    "honeypotWebhookUrl"{% endif %}{% if cookiecutter.file_integrity %},
    "tetragon"{% endif %}
  ],
  "additionalProperties": false
}
